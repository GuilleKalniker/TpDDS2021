{{#partial "contenido"}}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
    <link type="text/css" rel="stylesheet" href="CSS/rescatar.css">

    <h1 class="titulo-rescatar">Datos de la mascota perdida</h1>
    <form action="/rescatar" method="POST">
        <div class="container">
            <div class="row align-items-start">
                <div class="col-md-5 col-12">
                    <h3 class="subtitulo-rescatar">Contanos sobre la mascota que encontraste</h3>

                    <label for="chapita" class="form-label">Chapita</label>
                    <input type="text" class="form-control formulario-rescatar" id="chapita"  placeholder="¡Si no tiene no te preocupes!">

                    <label for="fechaencuentro" class="form-label">Fecha de encuentro</label>
                    <input type="date" class="form-control formulario-rescatar" id="fechaencuentro">

                    <label for="fotos" class="form-label">Fotos</label>
                    <input type="file" class="form-control formulario-rescatar" id="fotos">

                    <label for="descripcion" class="form-label">Descripción</label>
                    <textarea class="form-control formulario-rescatar" id="descripcion" rows="5"> </textarea>

                    <label for="lugarEncuentro" class="form-label">Lugar de encuentro</label>
                    <input type="address" class="form-control formulario-rescatar" id="lugarEncuentro">

                </div>
                <div class="col-md-5 col-12">
                    <h3 class="subtitulo-rescatar">¡También necesitamos tus datos!</h3>

                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control formulario-rescatar" id="nombre">

                    <label for="apellido" class="form-label">Apellido</label>
                    <input type="text" class="form-control formulario-rescatar" id="apellido">

                    <label for="fechaNacimiento" class="form-label">Fecha de nacimiento</label>
                    <input type="date" class="form-control formulario-rescatar" id="fechaNacimiento">

                    <label for="tipo_doc">Tipo de documento</label>
                    <div class="centrar-dni">
                        <select class="form-control formulario-rescatar dni col-1" id="tipo_doc" name="tipo_doc">
                        {{#each tipos_documento}}
                            <option value={{this}}>{{this}}</option>
                        {{/each}}
                        </select>
                        <input type="text" class="form-control formulario-rescatar dni-num col-4" id="num_doc" name="num_doc">
                    </div>


                    <label for="direccion" class="form-label">Dirección</label>
                    <input type="text" class="form-control formulario-rescatar" id="direccion">

                    <label for="contacto1" class="form-label">Tel. Contacto 1</label>
                    <input type="text" class="form-control formulario-rescatar" id="contacto1">

                    <label for="contacto2" class="form-label">Tel. Contacto 2</label>
                    <input type="text" class="form-control formulario-rescatar" id="contacto2">

                    <div class="centrar-boton-rescatar">
                        <button type="submit" class="btn btn-primary boton-rescatar justify-content-end">Registrar</button>
                    </div>
                </div>
                <div class="col-md-2 col-12">
                    <img src="/images/gatito.webp" alt="gatito_sonriente" class="img-fluid">
                </div>
            </div>
        </div>
    </form>
{{/partial}}

{{>layout.hbs}}